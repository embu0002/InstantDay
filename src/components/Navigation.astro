---

<header>
  <nav class="nav">
    <div class="logo">
      <a href="/">
        <img src="/logo.svg" alt="logo" />
      </a>
    </div>

    <!-- Desktop menu -->
    <ul class="nav-left desktop-nav">
      <li><a href="/vn">WINNERS & NOMINEES</a></li>
      <li><a href="/info">INFO</a></li>
      <li><a href="/share">SHARE YOUR INSTANT</a></li>
    </ul>

    <!-- Burger (mobil) -->
    <button class="burger" id="burger" aria-label="Open menu" aria-expanded="false" aria-controls="mobileMenu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </nav>

  <!-- Overlay + panel -->
  <div id="overlay" class="overlay"></div>

  <aside id="mobileMenu" class="panel" role="dialog" aria-modal="true">
    <div class="panel-header">
      <span class="panel-title">MENU</span>
      <button id="closePanel" class="close" aria-label="Close menu">×</button>
    </div>

    <ul class="panel-links">
      <li><a href="/">MAIN</a></li>
      <li><a href="/share">SHARE YOUR INSTANT</a></li>
      <li><a href="/vn">WINNERS&NOMINEES</a></li>
      <li><a href="/info">INFO</a></li>

      <div class="panel-social mt-5">
        <p>FOLLOW US ON<br />SOCIAL MEDIA</p>
        <div class="icons">
          <!-- Instagram -->
          <a href="https://instagram.com" aria-label="Instagram">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="3" width="18" height="18" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.5" y2="6.5" stroke-width="2"></line>
            </svg>
          </a>
          <!-- Facebook -->
          <a href="https://facebook.com" aria-label="Facebook">
            <svg width="26" height="26" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22 12.06C22 6.52 17.52 2 12 2S2 6.52 2 12.06c0 5.01 3.66 9.16 8.44 9.94v-7.03H8.08v-2.9h2.36V9.41c0-2.33 1.39-3.62 3.52-3.62 1.02 0 2.09.18 2.09.18v2.3h-1.18c-1.16 0-1.52.72-1.52 1.46v1.75h2.59l-.41 2.9h-2.18V22c4.78-.78 8.44-4.93 8.44-9.94z"></path>
            </svg>
          </a>
        </div>
      </div>
    </ul>

    <div class="panel-footer">
      <img src="/navigationlogo.svg" alt="Instant day" />
    </div>
  </aside>

  <script>
    const burger = document.getElementById("burger");
    const panel = document.getElementById("mobileMenu");
    const overlay = document.getElementById("overlay");
    const close = document.getElementById("closePanel");

    function openMenu() {
      burger.classList.add("open");
      panel.classList.add("active");
      overlay.classList.add("active");
      burger.setAttribute("aria-expanded", "true");
      document.body.style.overflow = "hidden";
    }
    function closeMenu() {
      burger.classList.remove("open");
      panel.classList.remove("active");
      overlay.classList.remove("active");
      burger.setAttribute("aria-expanded", "false");
      document.body.style.overflow = "";
    }

    burger.addEventListener("click", () => {
      const isOpen = panel.classList.contains("active");
      isOpen ? closeMenu() : openMenu();
    });
    close.addEventListener("click", closeMenu);
    overlay.addEventListener("click", closeMenu);

    // Luk ved ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeMenu();
    });
  </script>

  <style>
    * {
      box-sizing: border-box;
    }

    header {
      background: var(--background);
      box-shadow: 0 1px 3px rgba(107, 106, 106, 0.08);
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .nav {
      max-width: none;
      width: 100%;
      margin: 0;
      padding: 20px clamp(8px, 1.5vw, 16px);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .logo img {
      max-height: 45px;
      height: auto;
    }

    /* Desktop nav (skjules på mobil) */
    .desktop-nav {
      display: none;
      gap: 3rem;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .desktop-nav a {
      text-decoration: none;
      color: var(--text);
      font-weight: 400;
      letter-spacing: 0.01em;
      font-family: "Courier Prime", monospace;
    }

    /* Burger */
    .burger {
      display: inline-flex;
      flex-direction: column;
      gap: 5px;
      width: 40px;
      height: 32px;
      justify-content: center;
      align-items: center;
      background: transparent;
      border: 0;
      cursor: pointer;
    }
    .bar {
      width: 24px;
      height: 2px;
      background: var(--black);
      transition:
        transform 0.25s,
        opacity 0.25s;
    }
    .burger.open .bar:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .burger.open .bar:nth-child(2) {
      opacity: 0;
    }
    .burger.open .bar:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }

    /* Panel (slide-over) */
    .panel {
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      width: min(700px, 100vw);
      background: var(--background);
      color: var(--black);
      box-shadow: -8px 0 24px rgba(0, 0, 0, 0.08);
      transform: translateX(100%);
      transition: transform 0.3s ease;
      z-index: 50;
      display: flex;
      flex-direction: column;
      padding: 16px;
    }

    /* Header i panelet */
    .panel-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .panel-title {
      font-family: "Montserrat", sans-serif;
      font-size: 32px;
      font-weight: 800;
      letter-spacing: 0.02em;
    }
    .close {
      border: 0;
      background: transparent;
      font-size: 28px;
      line-height: 1;
      cursor: pointer;
    }

    /* Links */
    .panel-links {
      list-style: none;
      margin: 20px 0 28px;
      padding: 0;
      font-weight: 800;
      letter-spacing: 0.03em;
      text-align: right;
    }
    .panel-links li {
      margin: 12px 0;
    }
    .panel-links a {
      color: var(--black);
      text-decoration: none;
    }

    /* Social */
    .panel-social {
      margin-top: 50px;
    }
    .panel-social p {
      font-weight: 800;
      margin-bottom: 8px;
    }
    .icons {
      display: flex;
      justify-content: end;
      gap: 14px;
    }

    /* Footer-logo nede til venstre */
    .panel-footer {
      position: absolute;
      left: 14px;
      bottom: 12px;
    }

    /* Åben tilstand */
    .panel.active {
      transform: translateX(0);
    }
    .overlay.active {
      opacity: 1;
      pointer-events: auto;
    }

    /* Desktop breakpoint: normal menu, skjul burger+panel */
    @media (min-width: 900px) {
      .desktop-nav {
        display: flex;
      }
      .burger {
        display: none;
      }
      .overlay,
      .panel {
        display: none;
      }
    }
  </style>
</header>
